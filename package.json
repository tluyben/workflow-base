{
  "name": "workflow-base",
  "version": "1.0.0",
  "description": "A simple yet powerful workflow backend system for Node.js with TypeScript support. Create automated workflows with multiple trigger types, robust execution patterns, and a rock-solid Express server that never crashes.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CLAUDE.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "start": "node dist/index.js",
    "start:node": "node examples/deno/node-compatibility.js",
    "deno": "npm run build && deno run --allow-net --allow-read examples/deno/basic-deno.ts",
    "deno:advanced": "npm run build && deno run --allow-net --allow-read examples/deno/advanced-sandbox.ts",
    "test:deno": "npm run build && deno test --allow-net --allow-read tests/deno/",
    "prepublishOnly": "npm run build && npm test",
    "prepack": "npm run build"
  },
  "keywords": [
    "workflow",
    "automation", 
    "scheduler",
    "express",
    "typescript",
    "cron",
    "intervals",
    "rest-api",
    "async",
    "node",
    "backend",
    "microservices",
    "orchestration",
    "triggers",
    "uncrashable"
  ],
  "author": "Claude Code Assistant",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/workflow-base.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/workflow-base/issues"
  },
  "homepage": "https://github.com/your-username/workflow-base#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "toad-scheduler": "^3.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}